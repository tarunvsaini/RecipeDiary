<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tarun.saini.recipeDiary">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- android:icon="@mipmap/ic_launcher" -->
    <application
        android:name=".Extras.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".UI.UploadActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarun.saini.recipeDiary.UI.RecipeActivity" />
        </activity>
        <activity android:name=".UI.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.RecipeActivity" />
        <activity android:name=".UI.DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarun.saini.recipeDiary.UI.RecipeActivity" />
        </activity>
        <activity android:name=".UI.RegisterActivity" />

        <provider
            android:name=".data.RecipeProvider"
            android:authorities="com.tarun.saini.recipeDiary"
            android:exported="false" />

        <receiver android:name=".widget.ShoppingListWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/shopping_list_widget_info" />
        </receiver>

        <service
            android:name=".widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name=".UI.ShoppingListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarun.saini.recipeDiary.UI.RecipeActivity" />
        </activity>

        <receiver
            android:name=".Extras.ConnectivityCheck"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".UI.FavoriteRecipe">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarun.saini.recipeDiary.UI.RecipeActivity" />
        </activity>
        <activity android:name=".UI.FavoriteDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tarun.saini.recipeDiary.UI.FavoriteRecipe" />
        </activity>
    </application>

</manifest>